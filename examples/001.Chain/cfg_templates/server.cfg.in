[general]
debug_mode=true
debug_dump_stream_headers=false
wallets_default=default
# seed mode. WARNING. Used true only when you start the new network
seed_mode=$seed_mode
auto_online=true


[conserver]
enabled=true
listen_unix_socket_path=/tmp/node_cli_$node_num


[server]
enabled=true
listen_address=127.0.0.1
listen_port_tcp=$node_port
server_threads=4
events_threads=0
events_timeout=0
stream_dump_headers=false
stream_ctl_keytype=oaes
stream_ctl_keytype_size=32


[cdb]
enabled=false
servers_list_enabled=true
servers_list_networks=[devnet]


[resources]
#   0 means auto detect
threads_cnt=0
pid_path=./node_$node_num/node_$node_num.pid
log_file=./node_$node_num/node_$node_num.log
wallets_path=./node_$node_num/wallet
ca_folders=[./node_$node_num/ca]
dap_global_db_path=./node_$node_num/global_db
dap_global_db_driver=cdb
